<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <TextView
        android:id="@+id/show_all"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pop_itemh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:text="Show All"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/show_active"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pop_itemh"
        app:layout_constraintTop_toBottomOf="@id/show_all"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:text="Show Active"
        android:textSize="12sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/show_completed"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pop_itemh"
        app:layout_constraintTop_toBottomOf="@id/show_active"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:text="Show Completed"
        android:textSize="12sp"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>
